# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1

set_from_resource $base00 color0 
set_from_resource $base01 color1 
set_from_resource $base02 color2 
set_from_resource $base03 color3 
set_from_resource $base04 color4 
set_from_resource $base05 color5 
set_from_resource $base06 color6 
set_from_resource $base07 color7 
set_from_resource $base08 color8 
set_from_resource $base09 color9 
set_from_resource $base0A color10 
set_from_resource $base0B color11 
set_from_resource $base0C color12 
set_from_resource $base0D color13 
set_from_resource $base0E color14 
set_from_resource $base0F color15 

# TODO: custom wallpaper pywal & squirell integration
exec_always --no-startup-id feh --randomize --bg-scale ~/.config/desktop/
# network manager applet
exec --no-startup-id nm-applet
# disable caps lock switch
exec xmodmap -e "clear lock"
# set caps_lock as escape
exec xmodmap -e "keysym Caps_Lock = Escape"

# Xresources db
exec --no-startup-id xrdb ~/.Xresources
# squirrel monkey terran adjutant 
#exec --no-startup-id /usr/bin/python /opt/squirrel/squirrel/squirrel.py
# x window composition 
exec --no-startup-id compton -f

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:DejaVu Sans Mono 16
font pango:DejaVu Sans Mono, Terminus Bold Semi-Condensed 16
font pango:Terminus 16px

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# We later bind this to mod+Shift+f.
for_window [instance="tmux"] floating enable
for_window [instance="tmux"] resize set 1280 720
for_window [instance="tmux"] move position center
for_window [instance="tmux"] move scratchpad
exec --no-startup-id urxvt -name tmux -e tmux 

# We later bind this to mod+Shift+p.
for_window [instance="ipython"] floating enable
for_window [instance="ipython"] resize set 1280 720
for_window [instance="ipython"] move position center
for_window [instance="ipython"] move scratchpad
exec --no-startup-id urxvt -name ipython -e ipython

# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -nb "$base00" -nf "$base0F" -sb "$base01" -sf "$base0F"

# scratchpad tmux instance
bindsym $mod+Shift+f [instance="tmux"] scratchpad show; move position center 

# scratchpad ipython instance
bindsym $mod+Shift+p [instance="ipython"] scratchpad show; move position center

# missing love on i3lock
bindsym $mod+Shift+o exec ~/.i3/lock -p

# Binding to make the webcam flot and sticky!
for_window [title="video0 - mpv"] floating enable
for_window [title="video0 - mpv"] sticky enable

# Binding capuchino hold keys
bindsym $mod+Shift+h exec pcmanfm ~

bindsym $mod+Shift+a exec pcmanfm menu://applications/

bindsym $mod+Shift+t exec pcmanfm trash:///

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+J move left
bindsym $mod+Shift+K move down
bindsym $mod+Shift+L move up
bindsym $mod+Shift+colon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# i3 default config: change container layout (stacked, tabbed, default)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+exclam move container to workspace 1
bindsym $mod+Shift+at move container to workspace 2
bindsym $mod+Shift+numbersign move container to workspace 3
bindsym $mod+Shift+dollar move container to workspace 4
bindsym $mod+Shift+percent move container to workspace 5
bindsym $mod+Shift+asciicircum move container to workspace 6
bindsym $mod+Shift+ampersand move container to workspace 7
bindsym $mod+Shift+asterisk move container to workspace 8
bindsym $mod+Shift+parenleft move container to workspace 9
bindsym $mod+Shift+parenright move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# Widow Colours         border  background text    indicator
client.focused          $base01 $base01    $base07 $base0F
client.focused_inactive $base02 $base02    $base03 $base0F
client.unfocused        $base02 $base02    $base03 $base0F
client.urgent           $base02 $base08    $base00 $base0F

# Start i3bar to display a workspace bar (plus py3status)
bar {
      status_command py3status -c ~/.i3/i3status.conf
# Show your colours
    colors {
        separator $base03
        background $base01
        statusline $base05
# border  background text
        focused_workspace  $base01 $base01    $base07
        active_workspace   $base01 $base02    $base03
        inactive_workspace $base01 $base01    $base03
        urgent_workspace   $base01 $base01    $base08
    }
}
