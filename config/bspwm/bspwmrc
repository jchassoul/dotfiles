#! /bin/mksh

xmodmap -e "clear lock" &
xmodmap -e "clear keycode 17" &
xmodmap -e "clear keycode 18" &
xmodmap -e "clear keycode 19" &
xmodmap -e "clear keycode 28" &
xmodmap -e "clear keycode 29" &
xmodmap -e "clear keycode 30" &
xmodmap -e "keysym Caps_Lock = Pointer_Button2" &
xmodmap -e "keysym Super_L = Tab" &
xmodmap -e "keysym Tab = Escape" &
xmodmap -e "keycode 17 = t T t T" &
xmodmap -e "keycode 18 = y Y y Y" &
xmodmap -e "keycode 19 = u U u U" &
xmodmap -e "keycode 28 = 8 asterisk 8 asterisk" &
xmodmap -e "keycode 29 = 9 parenleft 9 parenleft" &
xmodmap -e "keycode 30 = 0 parenright 0 parenright" &

sxhkd &
unclutter &

polychromatic-tray-applet &

#compton -f &

feh --bg-scale ~/.config/desktop/background.jpg &

xrdb ~/.Xresources &
dunst &
nm-applet &
blueman-applet &
polybar topbar &

# abyssus 2014
xinput set-button-map 13 1 2 3 0 0 0 0 &

# viper mini
# ?

# is this still needed?
wal -R --vte &

bspc monitor DP-1 -d I II III IV V
bspc monitor eDP-1 -d VI VII VIII IX X

bspc config automatic_scheme alternate 
bspc config initial_polarity second_child

bspc config border_width         0 
bspc config window_gap           4
bspc config split_ratio          0.64
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true

bspc config presel_feedback_color "#48a5CF" 

bspc config ignore_ewmh_fullscreen enter

bspc config pointer_modifier mod1
bspc config pointer_action1 move
bspc config pointer_action2 resize_side

bspc rule -a Gnome-calculator state=floating follow=on
bspc rule -a Pcmanfm state=floating follow=on
