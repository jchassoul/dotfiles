[colors]
background = ${xrdb:color0}
background-alt = #1c1c1c
foreground = ${xrdb:color7}
foreground-alt = #555
primary = #98B740
secondary = #48a5CF
alert = #DA547B
active = #c792ea

[bar/topbar]
width = 100%
height = 19
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #000000
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = "Inconsolata:pixelsize=12;3"
font-1 = "FontAwesome:pixelsize=12;3"
modules-left = bspwm
modules-center = xwindow
modules-right = cmus pulseaudio-microphone volume popup-calendar battery
tray-position = right
tray-padding = 2
enable-ipc = true
wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

[module/cmus]
type = custom/script
exec = ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1
click-left = cmus-remote --next
click-right = cmus-remote --prev
click-middle = cmus-remote --pause
scroll-up = cmus-remote --volume +5%
scroll-down = cmus-remote --volume -5%
format = <label>
label =  %output%
label-maxlen = 50
label-foreground = ${colors.foreground-alt}

[module/pulseaudio-microphone]
type = custom/script
exec = ~/.config/polybar/pulseaudio-microphone.sh
tail = true
click-left = ~/.config/polybar/pulseaudio-microphone.sh --toggle &
format = <label>
label =  %output%

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#0a81f5}%mountpoint%%{F-} %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.background}
label-focused-padding = 2
label-occupied = %index%
label-occupied-padding = 2
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-empty=

[module/date]
type = internal/date
interval = 5
label = %{F#fff}%date%%{F-} %{F#fff}%time%%{F-}
date =
date-alt = %A, %B %d, %Y
time = %I:%M %p
time-alt = ${self.time}
format-prefix = 
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}

[module/popup-calendar]
type = custom/script
exec = ~/.config/polybar/popup-calendar.sh
interval = 5
click-left =  ~/.config/polybar/popup-calendar.sh --popup &

[module/volume]
type = internal/volume
format-volume = <label-volume>
label-volume =  %percentage%%
format-muted-foreground = ${colors.alert}
label-muted =  muted
click-right = pavucontrol

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 101
format-charging = <label-charging>
format-charging-background = ${colors.background-alt}
format-charging-underline = ${colors.secondary}
format-discharging = <label-discharging>
format-discharging-underline = ${colors.primary}
format-full-underline = ${colors.background}
label-charging = %percentage%% 
label-discharging = %percentage%% 
label-full = %percentage%% 
label-charging-background = ${colors.background-alt}
label-discharging-background = ${colors.background-alt}
label-full-background = ${colors.background}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
; vim:ft=dosini
